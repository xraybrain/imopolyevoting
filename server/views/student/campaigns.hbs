<span id="campaign-page"></span>
{{>_mainNav}}
<nav aria-label="breadcrumb">
  <ol class="breadcrumb bg-light">
    <li class="breadcrumb-item">
      <a href="#">
        <i class="fas fa-home mr-1"></i>
        Home
      </a>
    </li>
    <li class="breadcrumb-item active">
      <div class="fas fa-flag mr-1"></div>
      Election Campaigns
    </li>
  </ol>
</nav>

<div class="container-fluid wrapper">
  <div class="col-12 col-md-8 text-center mx-auto pb-3">
    <i class="fas fa-flag fa-2x text-success"></i>
    <h2 class="text-uppercase">
      Election Campaign Manager
    </h2>
  </div>

  <div id="candidate-pane"></div>
</div>
{{>_mainFooter}}

<script type="mustache/template" id="campaign-template">
\{{#candidates}}
<div class="col-12 col-md-11 col-lg-8 mx-auto py-4">
  <div class="card" >
    <div class="card-header text-center bg-dark text-light">
      <h3 class="text-uppercase mb-0">\{{Election.title}}</h3>
    </div>
    <div class="card body p-3">
      <table class="table table-striped table-hover">
        <tbody>

          <tr>
            <th class="text-uppercase">
              Position Aspired
            </th>
            <td class="text-uppercase font-weight-bold">
              \{{ElectionPosition.Position.title}}
            </td>
          </tr>
          <tr>
            <th class="text-uppercase">
              Campaign Name
            </th>
            <td>
              \{{campaignName}}
            </td>
          </tr>
          <tr>
            <th class="text-uppercase">
              Manifesto
            </th>
            <td>
              \{{manifesto}}
            </td>
          </tr>
          <tr>
            <th class="text-uppercase">Eligible</th>
            <td>
              \{{#canContest}}
                active
              \{{/canContest}}
              \{{^canContest}}
                in active
              \{{/canContest}}
            </td>
          </tr>
      </table>
    </div>
    <div class="card-footer text-center">
      <button class="btn btn-warning text-uppercase font-weight-bold" data-toggle="modal" data-target="#edit-campaign-\{{id}}">
        <i class="fas fa-edit"></i>
        edit campaign
      </button>

      <div class="modal fade" id="edit-campaign-\{{id}}" style="margin-top: 8%;" data-backdrop="static">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header bg-dark text-light">
              <h5 class="mb-0">
                <i class="fas fa-edit"></i>
                Edit Campaign (\{{Election.title}})
              </h5>
              <a href="#" class="close text-white" data-dismiss="modal">
                &times;
              </a>
            </div>

            <div class="modal-body" style="position: relative">
              <form action="" method="post" class="update-campaign">
                <div class="form-group">
                  <input type="text" value="\{{ElectionPosition.Position.title}}" class="form-control" readonly="true"/>
                </div>
                <div class="form-group">
                  <input type="text" name="campaignName" value="\{{campaignName}}" class="form-control" placeholder="Campaign Name" id="campaignName"/>
                </div>
                <div class="form-group">
                  <textarea name="manifesto" rows="3" class="form-control" placeholder="Manifesto" id="manifesto">\{{manifesto}}</textarea>
                </div>

                <div class="text-center">
                  <input type="hidden" name="id" value="\{{id}}" />
                  <button class="btn btn-warning font-weight-bold text-uppercase">
                    update
                    <i class="fas fa-save ml-2"></i>
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
\{{/candidates}}
\{{^candidates}}
  <p class="text-center">
    Sorry you current have no campaign. purchase an election form to get started.</p>
\{{/candidates}}
</script>