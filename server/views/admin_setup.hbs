<div class="container p-1">
  <div class="row">
    <div class="col-10 col-sm-8 col-md-6 col-lg-5 mx-auto">
      <div class="alert alert-warning">
        <p><a href="#" class="close p-0" data-dismiss="alert">&times;</a></p>
        <div class="d-flex align-items-center text-center">
          <div class="mt-3">
            <p class="m-0">
              <i class="fas fa-exclamation-triangle fa-2x text-danger mb-1"></i>
            </p>
            <span>
              No administrator account exists, you can create a new one using the form below.
            </span>
          </div>
        </div>
      </div>
      <div class="card">
        <div class="card-header bg-dark text-light">
          <h4 class="card-title">
            Create Administrator Account
          </h4>
        </div>
        <div class="card-body">
          <form action="/api/admins/" id="new-admin-form" method="post">
            <div class="form-group">
              <input type="text" name="surname" id="surname" class="form-control" placeholder="Surname"
                autocomplete="off">
              <span class="d-block error" id="surnameError"></span>
            </div>

            <div class="form-group">
              <input type="text" name="othernames" id="othernames" class="form-control" placeholder="Othernames"
                autocomplete="off">
              <span class="d-block error" id="othernamesError"></span>
            </div>

            <div class="form-group">
              <input type="email" name="emailAddress" id="email-address" class="form-control"
                placeholder="Email Address" autocomplete="off">
              <span class="d-block error" id="emailAddressError"></span>
            </div>

            <div class="form-group">
              <select name="userRole" id="user-role" class="form-control" aria-readonly="true" readonly="true">
                <option value="superuser">Super User</option>
              </select>
            </div>

            <div class="form-group">
              <input type="password" name="password" id="password" class="form-control" placeholder="Password">
              <span class="d-block error" id="passwordError"></span>
            </div>

            <div class="form-group">
              <input type="password" name="confirmPassword" id="confirmPassword" class="form-control"
                placeholder="confirm Password">
              <span class="d-block error" id="confirmPasswordError"></span>
            </div>

            <div class="form-group text-center">
              <button type="submit" class="btn btn-success">
                create account
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>