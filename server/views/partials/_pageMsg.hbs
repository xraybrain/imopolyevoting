{{#if msgError}}

<div class="msgbox bg-danger text-light font-weight-bold">
  <a href="#" class="close" data-dismiss="msgbox">&times</a>
  <p class="text-center m-0 mt-1 p-0">
    <i class="fas fa-exclamation-triangle"></i>
  </p>
  <p class="p-0 m-0 text-center">
    {{msgError}}
  </p>
</div>

{{/if}}

{{#if msgSuccess}}
<div class="msgbox bg-success text-light font-weight-bold">
  <a href="#" class="close" data-dismiss="msgbox">&times</a>
  <p class="text-center m-0 mt-1 p-0">
    <i class="fas fa-check-circle"></i>
  </p>
  <p class="p-0 m-0 text-center">
    {{msgSuccess}}
  </p>
</div>
{{/if}}